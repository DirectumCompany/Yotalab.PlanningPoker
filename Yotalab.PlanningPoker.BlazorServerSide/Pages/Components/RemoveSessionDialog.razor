<MudDialog Class="mud-dialog-top-center">
  <TitleContent>
    <MudText Typo="Typo.h6" Class="d-flex align-center">
      <MudIcon Class="mr-2" Icon="@Icons.Filled.Dangerous" Color="Color.Error" />
      Удалить сессию
    </MudText>
  </TitleContent>
  <DialogContent>
    @if (this.Session != null)
    {
      <MudText>Сессию <b>"@this.Session.Name"</b> после удаления не восстановить.</MudText>
    }
  </DialogContent>
  <DialogActions>
    <MudButton Color="Color.Default"
               Variant="Variant.Filled"
               OnClick="this.Cancel">
      Отменить
    </MudButton>
    <MudButton Color="Color.Error"
               Variant="Variant.Filled"
               @onclick="@(async () => await this.ConfirmAsync())">
      Удалить
    </MudButton>
  </DialogActions>
</MudDialog>