<MudDialog Class="mud-dialog-top-center">
  <TitleContent>
    <MudText Typo="Typo.h6" Class="d-flex align-center">
      <MudIcon Class="mr-2" Icon="@Icons.Material.Filled.Dangerous" Color="Color.Error" />
      @UIResources.RemoveSessionDialogTitle
    </MudText>
  </TitleContent>
  <DialogContent>
    @if (this.Session != null)
    {
      <MudText>@((MarkupString)string.Format(UIResources.RemoveSessionDialogWarning, this.Session.Name))</MudText>
    }
  </DialogContent>
  <DialogActions>
    <MudButton Color="Color.Default"
               Variant="Variant.Filled"
               OnClick="this.Cancel">
      @UIResources.CancelButton
    </MudButton>
    <MudButton Color="Color.Error"
               Variant="Variant.Filled"
               @onclick="@(async () => await this.ConfirmAsync())">
      @UIResources.RemoveSession
    </MudButton>
  </DialogActions>
</MudDialog>