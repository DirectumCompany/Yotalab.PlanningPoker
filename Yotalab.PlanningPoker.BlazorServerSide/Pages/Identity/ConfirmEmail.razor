@page "/identity/confirm"
@using Microsoft.AspNetCore.WebUtilities
@layout IdentityLayout

<MudCard Class="register-card">
  <MudCardContent>
    <MudText Align="Align.Center" Class="mb-10" Typo="Typo.h4">
      <Logotype />
    </MudText>
    @if (this.isSuccess)
    {
      <MudText Typo="Typo.h6" Class="mb-3">
        Вы подвердили вашу эл. почту
      </MudText>
      <MudAlert Severity="Severity.Success">Спасибо, что выбрали нас!</MudAlert>
    }
    else
    {
      if (this.notFound)
      {
        <MudAlert Severity="Severity.Warning">Учетная запись не найдена.</MudAlert>
      }
      else
      {
        <MudAlert Severity="Severity.Error">Ошибка подтверждения эл. почты.</MudAlert>
      }
    }
  </MudCardContent>
</MudCard>