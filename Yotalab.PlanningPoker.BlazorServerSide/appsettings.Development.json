{
  "DetailedErrors": true,
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "Enrich": [ "WithThreadId" ],
    "WriteTo": [
      /* Отладочный логгер для отправки писем. */
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "WriteTo": [
              {
                "Name": "Async",
                "Args": {
                  "configure": [
                    {
                      "Name": "File",
                      "Args": {
                        "path": "..\\logs\\mailing.log",
                        "outputTemplate": "{Timestamp:o} {Message}{NewLine}{Exception}",
                        "rollingInterval": "Day",
                        "fileSizeLimitBytes": 7340032,
                        "rollOnFileSizeLimit": true,
                        "retainedFileCountLimit": 14
                      }
                    }
                  ]
                }
              }
            ],
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "SourceContext = 'Yotalab.PlanningPoker.BlazorServerSide.Services.Mailing.DebugEmailSender'"
                }
              }
            ]
          }
        }
      },
      /* Основной логгер. */
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "WriteTo": [
              {
                "Name": "Async",
                "Args": {
                  "configure": [
                    {
                      "Name": "File",
                      "Args": {
                        "path": "..\\logs\\server.log",
                        "outputTemplate": "{Timestamp:o} [{Level:u3}] ({ThreadId}) {Message}{NewLine}{Exception}",
                        "rollingInterval": "Day",
                        "fileSizeLimitBytes": 7340032,
                        "rollOnFileSizeLimit": true,
                        "retainedFileCountLimit": 14
                      }
                    }
                  ]
                }
              }
            ],
            "Filter": [
              {
                "Name": "ByExcluding",
                "Args": {
                  "expression": "SourceContext = 'Yotalab.PlanningPoker.BlazorServerSide.Services.Mailing.DebugEmailSender'"
                }
              },
              {
                "Name": "ByExcluding",
                "Args": {
                  "expression": "StartsWith(SourceContext, 'Orleans.')"
                }
              }
            ]
          }
        }
      }
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=3306;Database=agilepoker;User=root;Password=11111",
    "DefaultGrainStorage": "Server=localhost;Port=3306;Database=agilepoker;User=root;Password=11111",
    "DefaultPubSubStorage": "Server=localhost;Port=3306;Database=agilepoker;User=root;Password=11111"
  },
  "DataProtection": {
    "Directory": "..\\keys",
    "CertificateThumbprint": ""
  },
  "SmtpEmailSender": {
    "Host": "",
    "Port": 0,
    "EnableSSL": false,
    "UserName": "",
    "Password": ""
  }
}
