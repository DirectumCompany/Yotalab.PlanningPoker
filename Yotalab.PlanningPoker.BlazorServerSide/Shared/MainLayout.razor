@inherits LayoutComponentBase

<AuthorizeView>
  <Authorized>
    <MudContainer MaxWidth="MaxWidth.Large">
      <MudLayout Class="m-auto">
        <MudAppBar Dense="true" Color="Color.Transparent" Elevation="0" Fixed="false" ToolBarClass="px-0">
          <NavMenu />
        </MudAppBar>
        <MudMainContent Class="pt-0 mx-auto">
          @Body
        </MudMainContent>
      </MudLayout>
    </MudContainer>
  </Authorized>
  <NotAuthorized>
    <MudLayout Class="d-flex">
      <MudContainer>
        <Welcome />
      </MudContainer>
    </MudLayout>
  </NotAuthorized>
</AuthorizeView>