@inherits LayoutComponentBase
@inject NavigationManager Navigation

<MudLayout Class="d-flex">
  <AuthorizeView>
    <Authorized>

      <MudContainer MaxWidth="MaxWidth.Large">
        <MudLayout Class="d-flex flex-column">
          <MudAppBar Dense="true" Color="Color.Transparent" Elevation="0" Fixed="false" ToolBarClass="px-0">
            <NavMenu />
          </MudAppBar>
          <MudMainContent Class="pt-0">
            @Body
          </MudMainContent>
        </MudLayout>
      </MudContainer>

    </Authorized>
    <NotAuthorized>

      <MudContainer Class="d-flex flex-column align-center">
        <Welcome />
        <MudSpacer />
        <MudMenu StartIcon="@Icons.Material.Filled.Language"
                 Class="mb-4"
                 Color="Color.Surface"
                 Label="@UIResources.InterfaceLanguage">
          <MudMenuItem OnClick="@(() => this.Navigation.NavigateToSetCulture(new System.Globalization.CultureInfo("ru")))">@UIResources.Russian</MudMenuItem>
          <MudMenuItem OnClick="@(() => this.Navigation.NavigateToSetCulture(new System.Globalization.CultureInfo("en")))">@UIResources.English</MudMenuItem>
        </MudMenu>
      </MudContainer>

    </NotAuthorized>
  </AuthorizeView>
</MudLayout>