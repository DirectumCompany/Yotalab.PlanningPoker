@page "/identity/confirmExternal"
@layout IdentityLayout

<MudCard Class="identity-card">
  <MudCardContent>
    <MudText Align="Align.Center" Class="mb-10" Typo="Typo.h4">
      <Logotype />
    </MudText>
    @if (this.result == null || !this.result.Succeeded)
    {
      if (this.result != null && this.result.Errors.Any())
      {
        foreach (var error in this.result.Errors)
        {
          <MudAlert Severity="Severity.Error">@error.Description</MudAlert>
        }
      }
      else
      {
        <MudAlert Severity="Severity.Warning">Попытка входа была неудачной</MudAlert>
      }
    }
    <MudCardActions Class="justify-end">
      <MudButton Link="identity/login" Variant="Variant.Filled" Color="Color.Primary">Войти</MudButton>
    </MudCardActions>
  </MudCardContent>
</MudCard>